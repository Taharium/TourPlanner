<Window x:Class="Tour_Planner.WindowsWPF.ConfirmationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Planner.WindowsWPF"
             mc:Ignorable="d" 
             Title="{Binding Title}" Height="150" Width="300">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Message}" Margin="10" />
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Yes" Margin="5" Width="75" Click="YesButton_Click" />
                <Button Content="No" Margin="5" Width="75" Click="NoButton_Click" />
            </StackPanel>
        </Grid>

</Window>
